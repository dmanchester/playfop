# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET     /label-design               controllers.Application.designLabels()
GET     /about                      controllers.Application.showAbout()
GET     /single-label               controllers.Application.generateSingleLabelAsPNG(request: Request)
GET     /labels-sheet               controllers.Application.generateLabelsSheetAsPDF(request: Request)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
